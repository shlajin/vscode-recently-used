{
  "name": "recently-used",
  "displayName": "recently-used",
  "description": "Recently used files... with colors.",
  "icon": "media/icon.jpeg",
  "version": "0.0.3",
  "author": {
    "name": "Artem Shlagin",
    "email": "artem@shlagin.com"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "url": "https://github.com/shlajin/vscode-recently-used"
  },
  "license": "MIT",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "recently-used.list",
        "title": "Recently used files"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "recently-used.conflictColor": {
          "type": "string",
          "default": "#ee3333",
          "description": "Color of the file with git conflict.",
          "format": "color-hex"
        },
        "recently-used.addedColor": {
          "type": "string",
          "default": "#829260",
          "description": "Color of the added file.",
          "format": "color-hex"
        },
        "recently-used.changedColor": {
          "type": "string",
          "default": "#a8c5f7",
          "description": "Color of the changed file.",
          "format": "color-hex"
        },
        "recently-used.untrackedColor": {
          "type": "string",
          "default": "#DE8E88",
          "description": "Color of the untracked file",
          "format": "color-hex"
        },
        "recently-used.ignoredColor": {
          "type": "string",
          "default": "#888888",
          "description": "Color of the ignored file",
          "format": "color-hex"
        },
        "recently-used.excludedColor": {
          "type": "string",
          "default": "#DE8E88",
          "description": "Minus icon excluded file",
          "format": "color-hex"
        },
        "recently-used.excludedRegexp": {
          "type": "string",
          "default": "/node_modules/",
          "description": "Pattern of the excluded files"
        }
      }
    }
  },
  "scripts": {
    "generate-circles": "tsx ./src/generate-circles.ts",
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsce": "vsce",
    "package-locally": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vsce": "^2.15.0"
  }
}
